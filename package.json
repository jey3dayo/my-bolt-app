{
  "name": "my-bolt-app",
  "packageManager": "pnpm@8.6.7",
  "version": "0.0.0",
  "engines": {
    "node": "20.x.x"
  },
  "private": true,
  "type": "module",
  "description": "TypeScript template action",
  "main": "src/server.ts",
  "scripts": {
    "build": "run-s build:tsup",
    "build:tsup": "tsup",
    "build:compile": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node build/server.js",
    "dev": "tsm --no-warnings=ExperimentalWarning src/server.ts",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint ./src",
    "lint:prettier": "prettier --check --ignore-path .prettierignore './**/*.ts'",
    "format": "run-s format:eslint format:prettier",
    "format:eslint": "eslint --cache --fix ./src",
    "format:prettier": "prettier --write --ignore-path .prettierignore './**/*.ts'",
    "test": "run-p lint jest",
    "jest:watch": "jest --watchAll",
    "all": "run-s format build test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jey3dayo/my-bolt-app"
  },
  "keywords": [
    "bolt"
  ],
  "author": "jey3dayo",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.18.0",
    "@t3-oss/env-core": "^0.10.1",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/parser": "^7.7.1",
    "dependency-cruiser": "^16.3.1",
    "eslint": "^9.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
